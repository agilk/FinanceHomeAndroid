<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
            android:columnCount="6"
              android:layout_height="match_parent">
    <TextView android:paddingEnd="2pt" android:textColor="#008000" android:layout_columnSpan="2" android:id="@+id/txTransDate" android:layout_width="wrap_content" android:textSize="10sp" android:layout_height="wrap_content" />
    <TextView android:paddingEnd="2pt" android:id="@+id/txTransCategory" android:layout_columnSpan="2" android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:paddingEnd="2pt" android:id="@+id/txTransSubCategory" android:layout_columnSpan="2" android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:paddingEnd="2pt" android:id="@+id/txTransAmount" android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:paddingEnd="2pt" android:id="@+id/txTransCurr" android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:paddingEnd="2pt" android:id="@+id/txTransWallet1" android:layout_columnSpan="2" android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:paddingEnd="2pt" android:id="@+id/txTransWallet2" android:layout_columnSpan="2" android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:paddingEnd="2pt" android:id="@+id/txTransAmountUsd" android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:paddingEnd="2pt" android:id="@+id/txTransAmountLocal" android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:paddingEnd="2pt" android:id="@+id/txTransNotes" android:layout_columnSpan="4" android:textSize="10sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

</GridLayout>
