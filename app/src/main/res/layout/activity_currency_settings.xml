<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:columnCount="1"
        android:layout_height="match_parent"
        tools:context="az.kerimov.financehome.activity.CurrencySettingsActivity">
    <TextView android:text="" android:id="@+id/xxx" android:layout_width="match_parent"
              android:layout_height="50dp"/>
    <ListView
            android:layout_width="match_parent"
            android:layout_height="233dp" android:id="@+id/listCurrencies"/>
    <GridLayout
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:columnCount="2">
        <TextView android:text="@string/labelCurrency" android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
        <Spinner android:id="@+id/spnCurrencies" android:layout_height="wrap_content" android:layout_width="wrap_content"/>
        <Button android:layout_columnSpan="2" android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:onClick="clickAddCurrency" android:text="@string/labelAdd"/>
    </GridLayout>

</GridLayout>
