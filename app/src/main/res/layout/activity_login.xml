<?xml version="1.0" encoding="utf-8"?>
<GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:columnCount="1"
        android:rowCount="4"
        tools:context="az.kerimov.financehome.activity.LoginActivity">


    <EditText
            android:layout_width="match_parent"
            android:layout_row="0"
            android:layout_column="0" android:id="@+id/editText1" android:text="agil"/>


    <EditText
            android:layout_width="match_parent"
            android:layout_row="1"
            android:layout_column="0"
            android:inputType="textPassword" android:id="@+id/editText2"/>
    <Button
            android:text="Button"
            android:onClick="login"
            android:layout_row="2"
            android:layout_column="0" android:id="@+id/button"/>
    <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_row="3"
            android:layout_column="0" android:id="@+id/textView" android:layout_height="282dp"/>
</GridLayout>
